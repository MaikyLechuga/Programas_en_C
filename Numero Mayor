#include <stdio.h>
#include <math.h>

int main(void)
{
	int A,B,i;
	int nmayor=0, total=0;
	printf("Introduzca el valor de A: \n");
	scanf("%d",&A);
	printf("Introduzca el valor de B: \n");
	scanf("%d",&B);
	if(A>B) nmayor=A; else nmayor=B;
	for(i=1; i<=nmayor, i++)
	{
		total=total+i;
		printf("%d + ",i);
	}
	printf("Sumatoria total: %d", total);
	return 0;
}
