#include <stdio.h>

void imprime3(int);

int main(void)
{
	int n;
	printf("Dame un numero entero:  ");
	scanf("%d", &n);
	imprime3(n);
}

void imprime3(int n)
{
	int i, j, k;
	for (i=0; i<=n; i++){
		for (k=n; k>=i; k--){
			printf("\t");
		}
		for (j=i; j>=1; j--){	
			printf("%d  \t", j);
		}
		printf("\n");
	}
}
